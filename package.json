{
  "name": "zero-hour",
  "version": "1.0.0",
  "description": "A simple space shmup game I originally made for a school project using the HTML5 game framework Phaser 3, bundled with Webpack and Babel. Enjoy!",
  "engines": {
    "node": "10.15.3",
    "npm": "6.4.1"
  },
  "private": true,
  "babel": {
    "presets": [
      "env"
    ]
  },
  "scripts": {
    "dev": "webpack-dev-server --config webpack.config.dev.js",
    "devTest": "webpack --config webpack.config.dev.js",
    "heroku-postbuild": "webpack --config webpack.config.prod.js",
    "start": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piguyinthesky/zero-hour.git"
  },
  "keywords": [
    "Phaser3",
    "Heroku",
    "ES6",
    "Babel",
    "Webpack4"
  ],
  "author": "Alexander Cai <alexandercai@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piguyinthesky/zero-hour/issues"
  },
  "homepage": "https://github.com/piguyinthesky/zero-hour#readme",
  "dependencies": {
    "express": "^4.16.3",
    "phaser": "^3.11.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "raw-loader": "^0.5.1",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.4"
  }
}
